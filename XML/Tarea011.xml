<!--Crea un documento XML bien formado de un instituto que incluya estudiantes, profesores y trabajadores-->
<instituto>

<estudiantes>
        <alumno>
            <id_alumno>1</id_alumno>
            <nombre>Pepe</nombre>
            <apellido>Ruiz</apellido>
            <curso>1º ASIR</curso>
        </alumno>
</estudiantes>

<profesores>
        <profesor>
            <id_profesor>1</id_profesor>
            <nombre>Juan</nombre>
            <apellido>López</apellido>
            <asignatura>Lengua</asignatura>
        </profesor>
</profesores>

<trabajadores>
        <trabajador>
            <id_trabajador>1</id_trabajador>
            <nombre>Carlos</nombre>
            <apellido>Rojo</apellido>
            <puesto>Mantenimiento</puesto>
        </trabajador>
</trabajadores>

</instituto>

<!--Crea un documento XML bien formado sobre una biblioteca. Debe contener atributos que permitan identificar 
    el libro y que registren si están prestados o no.-->

<biblioteca>

        <libro>
            <ISBN prestado="Si">1</ISBN>
            <titulo>SUMISION</titulo>
            <autor>MICHEL HOUELLEBECQ</autor>
            <editorial>ANAGRAMA</editorial>
        </libro>     

        <libro>
            <ISBN prestado="No">2</ISBN>
            <titulo>ENSAYO SOBRE LA LUCIDEZ</titulo>
            <autor>JOSE SARAMAGO</autor>
            <editorial>DEBOLSILLO</editorial>
        </libro>  

</biblioteca>

